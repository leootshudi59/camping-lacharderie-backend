			"item": [
				{
					"name": "Login guest 1 (success)",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"✅ Status code - 200 OK\", function () {",
									"  pm.response.to.have.status(200);",
									"});",
									"",
									"pm.environment.set('guest1_jwt', pm.response.json().token);",
									"",
									"pm.test(\"Contains token\", function () {",
									"  pm.expect(pm.response.json().token).to.be.a('string').and.not.empty;",
									"});",
									"",
									"const idFromEnv = pm.environment.get('booking2_id') || pm.environment.get('guest1_booking_id');",
									"pm.test(\"Booking ID matches\", function () {",
									"    pm.expect(pm.response.json().booking.booking_id).to.eql(idFromEnv);",
									"});"
								],
								"type": "text/javascript",
								"packages": {},
								"requests": {}
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"res_name\": \"{{guest1_res_name}}\",\n  \"booking_number\": \"{{guest1_booking_number}}\"\n}",
